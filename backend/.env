# .env 配置文件
# ===== 服务器配置 =====
SERVER_IP=8.163.2.84          # 你的公网IP
SERVER_PORT=5000
FLASK_ENV=production

# ===== 数据库配置 =====
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=123456
DB_NAME=insulator_detection

# ===== 模型配置 =====
DEFAULT_MODEL=best.pt
CONF_THRESHOLD=0.25
IOU_THRESHOLD=0.45

# ===== 性能配置 =====
MAX_IMAGE_SIZE=1280           # 限制图片大小，避免内存不足
MAX_MEMORY_PERCENT=85.0
USE_GPU=auto                  # auto, true, false

# ===== 网络配置 =====
# 如果有VPN网络，可以开启
USE_TAILSCALE=false